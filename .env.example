# =====================================
# CONFIGURACIÓN DE LLM
# =====================================
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini-2024-07-18

# =====================================
# API KEYS (¡¡¡REEMPLAZA CON TUS CLAVES!!!)
# =====================================
# OpenAI API
OPENAI_API_KEY=tu_openai_api_key_aqui

# Groq API
GROQ_API_KEY=tu_groq_api_key_aqui

# Anthropic API (opcional - para Claude)
ANTHROPIC_API_KEY=tu_anthropic_api_key_aqui

# =====================================
# CONFIGURACIÓN DEL BOT
# =====================================
BOT_NAME=iAgente_Vida

# =====================================
# WHATSAPP INTEGRATION (OPCIONAL)
# =====================================
WHATSAPP_TOKEN=tu_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id
WHATSAPP_VERIFY_TOKEN=tu_verify_token

# =====================================
# LANGCHAIN TRACING (OPCIONAL)
# =====================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=tu_langchain_api_key
LANGCHAIN_PROJECT=iAgente_Vida

# =====================================
# CONFIGURACIÓN ADICIONAL
# =====================================
# Entorno de desarrollo
DEBUG=true
LOG_LEVEL=INFO

# Configuración de Redis (para caché - opcional)
REDIS_URL=redis://localhost:6379/0

# Configuración de base de datos (opcional)
DATABASE_URL=postgresql://user:password@localhost:5432/iagente_vida